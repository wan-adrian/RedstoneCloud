<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="net.minecrell.terminalconsole" shutdownHook="disable">
    <Appenders>
        <TerminalConsole name="Console">
            <PatternLayout noConsoleNoAnsi="true"
                           pattern="%cyan{%d{HH:mm:ss}} [%7t] [%style{%highlight{%-5level}{STYLE=Logback}}] %minecraftFormatting{%msg}%n"/>
        </TerminalConsole>

        <TerminalConsole name="Console-Plugin">
            <PatternLayout noConsoleNoAnsi="true"
                           pattern="%cyan{%d{HH:mm:ss}} [%7t] [%style{%highlight{%-5level}{STYLE=Logback}}] [%c{1}] %minecraftFormatting{%msg}%n"/>
        </TerminalConsole>

        <RollingRandomAccessFile name="File"
                                 fileName="logs/cloud.log"
                                 filePattern="logs/cloud-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%7t] %-5level - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="File-Plugin"
                                 fileName="logs/server.log"
                                 filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%7t] %-5level [%c{1}] - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

        <Logger name="*" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>
